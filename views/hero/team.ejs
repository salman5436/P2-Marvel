<div class="team-head">
    <h2> Welcome to Your Team!</h2>
    <h2> Avengers Assemble and fight for the world!</h3>
</div>

<div class="team-img">
    <% team.forEach((hero) => { %>
        <h4> <%= hero.name %> </h3>
        <img src="<%= hero.image %>.jpg">
        <p> <%= hero.description %> </p>
       
        <form method="POST" action="/hero/team/<%= hero.id %>/?_method=DELETE">
            <p>Click here to remove from team!</p>
            <input type="submit" value="Remove">
        </form>
    <% }) %>
</div>


<div class="upload">
    <p>The Avengers need a leader, only you can help them!</p>
    <p> <a href="/hero/upload">Create your own hero</a></p>
</div>

<div class="fight">
    <p>Are you ready to face the greatest threat the world has ever faced?</p>
    <p> <a href="/hero/villain"> Click here to choose your villain!</a></p>    
    <h3>AVENGERS! LET'S FIGHT!</h3>
</div>